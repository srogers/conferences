- if false # param_context(:user_id).present?
  = link_to "Done", events_path(user_id: param_context(:user_id)), :class => "btn btn-secondary float-right"
- else
  - if request.referrer&.include?('speakers')
    = link_to "Done", speakers_path, :class => "btn btn-secondary float-right"
  - elsif request.referrer&.include?('presentations')
    = link_to "Done", presentations_path, :class => "btn btn-secondary float-right"
  - elsif request.referrer&.include?('publications')
    = link_to "Done", publications_path, :class => "btn btn-secondary float-right"
  - else
    = link_to "Done", events_path, :class => "btn btn-secondary float-right"
