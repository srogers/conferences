<%# This comes from the FB getting starting page:
  #   https://developers.facebook.com/quickstarts/735327976605607/?platform=web
  # and similar but different here
  #   https://developers.facebook.com/docs/analytics/quickstart-web
 %>
<script type="application/javascript">
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '<%= ENV['FB_APP_ID'] %>',
      xfbml      : true,
      version    : 'v2.7'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>
