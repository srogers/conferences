%nav.navbar.navbar-inverse
  .container
    .navbar-header
      = link_to 'Conferences', root_path, class: 'navbar-brand'
      = content_tag :div, 'Beta', class: 'beta-marker'
      %button.navbar-toggle.collapsed{type: "button", "data-toggle": "collapse", "data-target": "#navbar" }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Conferences', conferences_path
        %li= link_to 'Speakers', speakers_path
        - if current_user
          - if current_user.admin?
            %li= link_to 'Users', users_path
            %li= link_to 'Settings', settings_path
          - elsif current_user.editor?

      .pull-right
        %ul.nav.navbar-nav
          - if current_user
            - if current_user.admin? || current_user.editor?
              %li= link_to 'Summary', summary_user_path(current_user)

            %li= link_to 'Profile', account_path
            %li= link_to 'Logout', logout_path
          - else
            %li= link_to 'Sign Up', new_user_path
            %li= link_to 'Login', login_path
