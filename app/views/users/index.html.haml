- title 'Users'
.row.listing-controls
  .col-md-12
    - if @require_account_approval
      =link_to "Needs Approval", users_path(:needs_approval => true), class: 'btn btn-sm btn-primary'
    .float-right
      =link_to "Add User", new_user_path, class: 'btn btn-sm btn-primary'

.row
  .col-md-12
    - if @users.blank?
      %p.error There are no users that match your criteria
    - else
      %table.table
        = render :partial => "table_head"
        = render :partial => "user", :collection => @users

      = paginate @users
