.row{id: "user_presentation_#{ user_presentation.id }"}
  .col.col-md-10.col-sm-8
    - presentation = user_presentation.presentation
    %p
      = link_to presentation.name, presentation_path(presentation)
      by
      = presentation.speaker_names
      - if presentation.conference.present?
        %br
        = presentation.conference_name
      - if user_presentation.completed_on.present?
        %br
        Done:
        = pretty_date user_presentation.completed_on

  .col.col-md-2.col-sm-4.text-right
    = render partial: 'manage_wishlist_buttons', locals: { user_presentation: user_presentation }
