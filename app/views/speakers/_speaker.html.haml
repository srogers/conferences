%tr{ :class => cycle(:even, :odd) }
  %td= link_to(truncate(speaker.name, length: 40), speaker_path(speaker))

  %td{width: 130}
    - if can? :edit, speaker
      = link_to edit_speaker_path(speaker), :class => "btn btn-sm" do
        = icon 'far', 'edit', class: 'fa-fw'
        Edit
    -if can?(:destroy, speaker) && speaker.presentations.empty?
      = link_to icon('far', 'trash-alt', class: 'fa-fw'), speaker_path(speaker), :method => :delete, :class => "btn btn-sm btn-danger", :data => { :confirm => 'Are you sure?' }, :post => true
