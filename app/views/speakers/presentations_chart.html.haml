.row
  .col-md-12
    = render partial: 'shared/return_from_chart_with_params'

    - if params[:search_term].present?
      - title "Speaker Presentations for #{ params[:search_term] }"
      %h3
        Speaker Presentations for
        = params[:search_term]

    - elsif params[:user_id].present?
      - title "Your Conference Speakers"
      %h3
        Your Conference Speakers
        = params[:search_term]

    - else
      - title "Frequent Conference Speakers"
      %h3 Most Frequent Speakers

    %p Click a name to see their presentations
    #- This div ID has to match up with the one in shared/presentations_chart
    #presentations_chart
      = render partial: 'shared/presentations_chart'
    .text-center Presentations
