.row
  .col-md-12
    = title "#{ @organizer.name }"

.row
  .col-md-12
    %b Series Name:
    = @organizer.series_name

.row
  .col-md-12
    %b Abbreviation:
    = @organizer.abbreviation

.row
  .col-md-12
    .form-actions
      - if can? :edit, @organizer
        = link_to "Edit", edit_organizer_path(@organizer), :class => "btn btn-secondary"
      = link_to "Done", organizers_path, :class => "btn btn-primary"
      .pull-right
        - if can?(:destroy, @organizer) && @organizer.conferences.empty?
          = link_to icon('trash', '', class: 'fa-fw'), organizer_path(@organizer), :method => :delete, :class => "btn btn-danger", :data => { :confirm => 'Are you sure?' }, :post => true
