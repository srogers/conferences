- title 'Organizers'

= render partial: 'control_bar'

- if @organizers.blank?
  .row
    .col-md-12
    %p You haven't created any organizers yet.

- else
  .row
    .col-md-12
      %table.table
        = render :partial => "table_head"
        = render :partial => "organizer", :collection => @organizers

  = render :partial => 'shared/pagination', locals: { collection: @organizers }
