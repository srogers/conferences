%tr
  %th= sorting_header 'Name', :presentations_path, 'presentations.sortable_name'
  %th
    = sorting_header 'Presented', :presentations_path, 'presentations.date', 'sort-numeric'
    = '/'
    = sorting_header 'Added', :presentations_path, 'presentations.created_at', 'sort-numeric'
  -if @conference.present? && (@conference.multi_venue? || @conference.virtual?)
    %th
      = [@conference.virtual? || @conference.multi_venue? ? 'Date' : nil, @conference.multi_venue? ? 'Location' : nil].compact.join(' / ')
  - if params[:heart].present?
    %th Needs
  %th Media
  %th
