- title 'Presentations'
.row.listing-controls
  .col-md-4
    = form_for :search, html: { class: 'form-inline' }, url: presentations_path, method: :get do |f|
      = text_field_tag :search_term, params[:search_term] || params[:tag]
      %span{style: 'margin-right: 5px;'}
      = button_tag type: 'submit', class: 'btn btn-primary btn-sm' do
        = icon('fas', 'search', class: 'fa-sm')
      - if params[:search_term].present? || params[:tag].present?
        = link_to 'All', presentations_path, class: "btn btn-sm btn-primary ml-2"

  .col-md-5
    %span.dropdown.show
      = link_to icon('fas', 'chart-bar', 'Chart It',   class: 'fa-sm'), '#', class: "btn btn-sm btn-primary dropdown-toggle", role: "button", id: "dropdownMenuLink", "data-toggle": "dropdown", "aria-haspopup": "true", "aria-expanded": false
      .dropdown-menu{ "aria-labelledby": "dropdownMenuLink" }
        = link_to icon('fas', 'chart-bar', 'by Year',  class: 'fa-sm'), chart_presentations_path(search_term: params[:search_term], tag: params[:tag]), class: "dropdown-item"
        = link_to icon('fas', 'chart-bar', 'Speakers', class: 'fa-sm'), chart_speakers_path(search_term: params[:search_term], user_id: params[:user_id]), class: "dropdown-item"

    = link_to 'Topics', tags_presentations_path, class: "btn btn-sm btn-primary"

  .col-md-3
    - if can? :create, Presentation
      .float-right
        =link_to "Add Presentation", new_presentation_path, class: 'btn btn-sm btn-primary'

.row
  .col-md-12
    - if @presentations.blank?
      - if params[:search_term].present? || params[:tag].present?
        %p No presentations match that search term
      - else
        %p You haven't created any presentations yet.
    - else
      %table.table
        = render :partial => "table_head"
        = render :partial => "presentation", :collection => @presentations

      = paginate @presentations
