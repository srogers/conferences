- title 'Publications'

= render partial: 'control_bar'

- if @publications.blank?
  .row
    .col-md-12
      - if param_context(:search_term).present? || param_context(:tag).present?
        %p No publications match that search term
      - else
        %p You haven't created any publications yet.
- else
  = render :partial => "header"
  = render :partial => "publication", :collection => @publications

  = render :partial => 'shared/pagination', locals: { collection: @publications }
