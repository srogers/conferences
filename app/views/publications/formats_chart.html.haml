= render partial: 'control_bar'

.row.chart-controls
  .col-md-12
    = render partial: 'shared/return_from_chart_with_params'

    - if param_context(:search_term).present?
      = title chart_title_with_context('Publication formats for')

    - elsif param_context(:user_id).present?
      = title "Your Publication formats"
        = param_context(:search_term)

    - else
      = title "Publication formats"

    %p Click a format to see its publications
    #formats_chart
      = render partial: 'shared/formats_chart'
    .text-center Publications
