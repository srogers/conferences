= render partial: 'control_bar'

.row.chart-controls
  .col-md-12
    = render partial: 'shared/return_from_chart_with_params'

    - if params[:search_term].present? || params[:event_type].present?
      - title "#{ current_event_type } Countries #{ params[:search_term].present? ? "For #{ params[:search_term]}" : '' }"
      %h3= "#{ current_event_type } Countries #{ params[:search_term].present? ? "For #{ params[:search_term]}" : '' }"

    - elsif params[:user_id].present?
      - title "Your Event Countries"
      %h3
        Your Event Countries
        = params[:search_term]

    - else
      - title "#{ current_event_type.pluralize } by Country"
      %h3= "#{ current_event_type.pluralize } by Country"

    %p Click a country to see its events
    #countries_chart
      = render partial: 'shared/countries_chart'
    .text-center Events
