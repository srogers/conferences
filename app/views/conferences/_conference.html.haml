%tr{ :class => cycle(:even, :odd) }
  %td= link_to(truncate(conference.short_name, length: 40), conference_path(conference))
  %td= conference.date_span
  %td= conference.location
  %td{ align: 'center' }
    - if conference.url.present?
      = link_to icon('far', 'file'), conference.url, target: '_blank'

  %td{width: 130}
    - if can? :edit, conference
      = link_to edit_conference_path(conference), :class => "btn btn-sm" do
        = icon 'far', 'edit', class: 'fa-fw'
        Edit
    - if can?(:destroy, conference) && conference.presentations.empty?
      = link_to icon('far', 'trash-alt', class: 'fa-fw'), conference_path(conference), :method => :delete, :class => "btn btn-sm btn-danger", :data => { :confirm => 'Are you sure?' }, :post => true
