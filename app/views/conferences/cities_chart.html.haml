= render partial: 'control_bar'

.row.chart-controls
  .col-md-12
    = render partial: 'shared/return_from_chart_with_params'

    - if params[:search_term].present?
      - title "Event Cities for #{ params[:search_term] }"
      %h3
        Event Cities for
        = params[:search_term]

    - elsif params[:user_id].present?
      - title "Your Event Cities"
      %h3
        Your Event Cities
        = params[:search_term]

    - else
      - title "Top Event Cities"
      %h3 Top Event Cities

    %p Click a city to see its events
    #cities_chart
      = render partial: 'shared/cities_chart'
    .text-center Events
