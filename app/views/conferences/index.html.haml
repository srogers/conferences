- title 'Conferences'

= render partial: 'conferences/control_bar'

- if @user.present?
  .row
    .col-md-12
      %h4
        Events Attended by
        = @user.name

- if @conferences.blank?
  .row
    .col-md-12
      - if params[:search_term].present?
        %p No events match the search terms
      - elsif @user.present?
        - if @user == current_user
          %p
            You haven't marked any events as attended by you.
            You can do that on the conference details page. Look for a button that says, "I was there!"
        - else
          %p
            This user hasn't marked any events as attended yet
      - else
        %p The system doesn't contain any events yet
- else
  .row
    .col-md-12
      %table.table
        = render :partial => "conferences/table_head"
        = render :partial => "conferences/conference", :collection => @conferences

  .row
    .col-md-10
      = paginate @conferences
    .col-md-2
      = per_page_selector conferences_path
