.row
  .col-md-12
    .page-header
      %h1 Sign In

= form_for @user_session do |f|
  .row
    .col-md-6
      = render 'shared/errors', object: @user_session

      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control'

      .form-group
        = f.label :password
        = f.password_field :password, class: 'form-control'

      .form-group
        = f.label :remember_me
        = f.check_box :remember_me

  .row
    .col-md-6
      %p= f.submit "Log in!", class: 'btn btn-primary btn-lg'

      %p= link_to 'Forgot your password?', new_password_reset_path, class: 'btn btn-lg btn-secondary'
      %p= link_to 'Create an account', new_user_path, class: 'btn btn-lg btn-default'

