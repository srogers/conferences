.row
  .col-md-12
    .page-header
      %h1 Sign In

= form_for @user_session do |f|
  .row
    .col-md-6
      -# we use a login-specific message here, instead of 'shared/errors'
      - if @user_session.errors.any?
        .panel.panel-warning.errors
          .panel-heading
            %h5
              %i.glyphicon.glyphicon-exclamation-sign
                Unable to log in
            %ul.panel-body
              -#- @user_session.errors.full_messages.each do |msg|
              -#  %li= msg
              User name or password are incorrect

      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control'

      .form-group
        = f.label :password
        = f.password_field :password, class: 'form-control'

      .form-group
        = f.label :remember_me
        = f.check_box :remember_me

  .row
    .col-md-6
      %p= f.submit "Log in!", class: 'btn btn-lg btn-primary'

      %p= link_to 'Forgot your password?', new_password_reset_path, class: 'btn btn-lg btn-secondary'
      %p= link_to 'Create an account', new_user_path, class: 'btn btn-lg btn-default'

