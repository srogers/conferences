-# This puts the navbar outside the content div so it can span the page
- content_for :body do
  %nav.navbar.navbar-expand-lg.navbar-dark
    .container
      %ul.navbar-nav.mr-auto
      - if action_name == 'edit'
        = link_to "Cancel", settings_path, :class => "btn btn-secondary ml-3"
      - elsif action_name == 'index'
        = link_to "Edit", edit_setting_path(@setting), :class => "btn btn-primary ml-3"
        = link_to "Done", root_path, :class => "btn btn-secondary ml-3"
