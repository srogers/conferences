-# This puts the navbar outside the content div so it can span the page
- content_for :body do
  %nav.navbar.navbar-expand-lg.navbar-dark
    .container
      %ul.navbar-nav.mr-auto

      -# action-specific buttons
      - if action_name == 'show'
        - if can?(:destroy, @program) && @program.conferences.empty?
          = link_to icon('far', 'trash-alt', '', class: 'fa-fw'), event_program_path(@program.conference_id, @program), :method => :delete, :class => "btn btn-sm btn-danger ml-3", :data => { :confirm => 'Are you sure?' }, :post => true
        - if can? :edit, @program
          = link_to "Edit", edit_event_program_path(@program.conference_id, @program), :class => "btn btn-sm btn-primary"
        = link_to "Done", programs_path, :class => "btn btn-sm btn-secondary ml-3"

      - elsif action_name == 'edit' || action_name == 'update'
        = link_to "Save", "#", class: 'btn btn-sm btn-primary mr-3', onclick: "$('form.edit_program').submit()"
        = link_to "Cancel", event_path(params[:event_id]), :class => "btn btn-sm btn-secondary ml-3"
      - elsif action_name == 'new' || action_name == 'create'
        = link_to "Create", "#", class: 'btn btn-sm btn-primary mr-3', onclick: "$('form.new_program').submit()"
        = link_to "Cancel",  event_path(params[:event_id]), :class => "btn btn-sm btn-secondary ml-3"
