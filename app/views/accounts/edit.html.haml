.row
  .col-md-12
    = title "Edit Your Account"

.row
  .col-md-6
    = simple_form_for @user, :url => account_path, :html => {:method => :patch} do |f|
      = error_messages_for @user
      = render :partial => "form_fields", :locals => {:f => f}
      = save_or_cancel f, account_path, "Update"

  .col-md-6
    .float-right
      =image_tag @user.photo.url, style: 'max-height: 100px'
